name:                deep-banana
version:             0.1.0.0
synopsis:            A GPU accelerated deep learning library.
description:         Please see README.md
homepage:            https://github.com/alexisVallet/hnn
license:             BSD3
license-file:        LICENSE
author:              Alexis Vallet
maintainer:          alexis.vallet@gmail.com
-- copyright:           
category:            Machine learning
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     DeepBanana
                     , DeepBanana.Layer
                     , DeepBanana.Layer.CUDA
                     , DeepBanana.Layer.CUDA.Monad
                     , DeepBanana.Layer.CUDA.CuDNN
                     , DeepBanana.Layer.CUDA.Cublas
                     , DeepBanana.Layer.CUDA.CuRAND
                     , DeepBanana.Layer.CUDA.Numeric
                     , DeepBanana.Tensor
                     , DeepBanana.Tensor.TensorScalar
                     , DeepBanana.Tensor.Shape
                     , DeepBanana.Tensor.Mutable
                     , DeepBanana.Optimize
                     , DeepBanana.Data
                     , DeepBanana.Cubits
  build-depends:       base >= 4.7
                     , cuda >= 0.6.5
                     , hcudnn >= 0.1
                     , hcurand >= 0.1
                     , mtl >= 2.1
                     , primitive >= 0.6
                     , cublas >= 0.2.1
                     , vector-space >= 0.9
                     , friday >= 0.2
                     , friday-devil >= 0.1
                     , pipes >= 4.1
                     , directory >= 1.2
                     , filepath >= 1.3
                     , vector >= 0.10
                     , MonadRandom >= 0.3
                     , mmorph >= 1.0
                     , cereal >= 0.4 
                     , bytestring >= 0.10
                     , deepseq >= 1.3
                     , time >= 1.4
                     , HList >= 0.4
  default-language:    Haskell2010
  default-extensions:  ScopedTypeVariables
                     , DataKinds
                     , TypeOperators
                     , PolyKinds
                     , FlexibleContexts
                     , FlexibleInstances
                     , MultiParamTypeClasses
  Extra-libraries:     hnn_cubits
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N

test-suite deep-banana-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       Test.DeepBanana.Layer.CUDA
                     , Test.DeepBanana.Layer.NumericGrad
                     , Test.DeepBanana.Tensor
  build-depends:       base >= 4.7
                     , deep-banana >= 0.1
                     , hcudnn >= 0.1 
                     , hcurand >= 0.1
                     , hspec >= 2.1
                     , vector-space >= 0.9
                     , mtl >= 2.1
                     , HList >= 0.4
                     , vector >= 0.10
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
  extensions:          ScopedTypeVariables
                     , TypeFamilies
                     , DataKinds
                     , TypeOperators
                     , PolyKinds
                     , FlexibleContexts
                     , FlexibleInstances

